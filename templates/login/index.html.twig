{% extends 'base.html.twig' %}

{% block title %}Connexion - Fablab Électron{% endblock %}

{% block body %}
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4 text-center">Connexion</h1>
                <form method="post">
                    {# CSRF token for login security #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" id="inputEmail" name="_username" class="form-control" value="{{ last_username|default('') }}" placeholder="Votre email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" id="inputPassword" name="_password" class="form-control" placeholder="Votre mot de passe" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
                        <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                </form>
                <div class="mt-3 text-center">
                    <p><a href="">Mot de passe oublié ?</a></p>
                    <p>Pas encore inscrit ? <a href="{{ path('register_index') }}">Créez un compte</a></p>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
